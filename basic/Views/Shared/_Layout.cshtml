<!doctype html>
<html lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta http-equiv="Cache-Control: max-age=3600, must-revalidate"/>
        <meta name="description" content="Codern">
        <title>@ViewData["Title"] - 2doo</title>

        <link rel="shortcut icon" href="~/assets/img/favicon.ico"/>

        <meta name="mobile-web-app-capable" content="yes">
        <link rel="icon" sizes="196x196" href="~/assets/img/touch-icon.png">

        <!-- https://gist.github.com/tfausak/2222823 -->
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black">    
        <meta name="apple-mobile-web-app-title" content="2doo Task Manager">
        <link rel="apple-touch-startup-image" href="~/assets/img/splash-screen.png">
        <link rel="apple-touch-icon" href="~/assets/img/touch-icon.png">

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/assets/css/styles-1.0.0.css">
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">2doo</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">         
                        <li><a asp-controller="TodoList" asp-action="Index">Listas</a></li>               
                        @Component.Invoke("Navigation")
                    </ul>
                    
                    @if(User.Identity.IsAuthenticated) {
                        <ul class="nav navbar-nav navbar-right">         
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ol√°, @User.Identity.Name <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a asp-controller="Account" asp-action="Logout">Sair</a></li>
                                </ul>
                            </li>                        
                        </ul>
                    }else{
                        <ul class="nav navbar-nav navbar-right">         
                            <li>
                                <a asp-controller="Account" asp-action="Login">Entrar</a>
                            </li>                                                        
                        </ul>
                    }
                    @RenderSection("topmenu", false)
                </div>
            </div>
        </div>
        <div class="container body-content">
            <br><br><br><br>
            @RenderBody()                        
        </div>

        <script src="~/assets/js/scripts-1.0.0.js"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>